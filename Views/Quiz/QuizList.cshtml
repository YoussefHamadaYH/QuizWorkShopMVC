@model IEnumerable<QuizWorkShopMVC.DTO.QuizVM>

@{
    ViewData["Title"] = "QuizList";
}

<h1>Quiz List</h1>

<p>
    <a asp-action="Add">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Quiz ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var quiz in Model)
        {
            <tr>
                <td>@quiz.QuizId</td>
                <td>@quiz.QuizName</td>
                <td>@quiz.QuizDescription</td>
                <td>@quiz.Date.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@quiz.QuizId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@quiz.QuizId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@quiz.QuizId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
